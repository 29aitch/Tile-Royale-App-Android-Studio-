<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="RoyaleTitle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/royal_gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="RoyaleHeader">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/royal_gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="RoyaleMetric">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/royal_gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="RoyaleButton">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="RoyaleRankText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/royal_gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="RoyalePlayerName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RoyalePlayerLevel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#B8B8B8</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="RoyaleScoreText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/royal_gold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>